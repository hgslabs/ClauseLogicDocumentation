<% content_for :page_header do %>
  <br />
  <ul class="breadcrumb">
    <li><%= link_to 'Documentation', v2_root_path %> <span class="divider">/</span></li>
    <li><%= link_to 'Resources', v2_resources_path %> <span class="divider">/</span></li>
    <li class="active">Indicator</li>
  </ul>
  <div class="row">
    <div class="span12">
      <h1>GET indicators</h1>
    </div>
  </div>
<% end %>

<div class="row">
  <div class="span8">
    <h3>Resource URL</h3>
    <p>/api/v1/indicators.format</p>
    <br />
    <h3>Example Request</h3>
    <table class="table">
      <tr>
        <td>GET</td>
        <td>/api/v1/indicators.xml</td>
      </tr>
    </table>
    <p><pre class="prettyprint">
&lt;Response&gt;
  &lt;Indicators&gt;
    &lt;Indicator id=&quot;1&quot;&gt;
      &lt;Name&gt;Organization&lt;/Name&gt;
      &lt;DataType&gt;String&lt;/DataType&gt;
      &lt;Constraint&gt;PICK_ONE&lt;/Constraint&gt;
      &lt;Values&gt;
        &lt;Value id=&quot;1&quot;&gt;Department of Defense&lt;/Value&gt;
        &lt;Value id=&quot;2&quot;&gt;NASA&lt;/Value&gt;
        &lt;Value id=&quot;3&quot;&gt;Coast Guard&lt;/Value&gt;
      &lt;/Values&gt;
    &lt;/Indicator&gt;
  &lt;/Indicators&gt;
&lt;/Response&gt;</pre></p>
    <h3>Example Request with Pagination</h3>
    <table class="table">
      <tr>
        <td>GET</td>
        <td>/api/v1/indicators.xml?page=1</td>
      </tr>
    </table>
    <p><pre class="prettyprint">
&lt;Response&gt;
  &lt;Pagination&gt;
    &lt;CurrentPage&gt;1&lt;/CurrentPage&gt;
    &lt;TotalPages&gt;5&lt;/TotalPages&gt;
    &lt;TotalResults&gt;100&lt;/TotalResults&gt;
  &lt;/Pagination&gt;
  &lt;Indicators&gt;
    &lt;Indicator id=&quot;1&quot;&gt;
      &lt;Name&gt;Organization&lt;/Name&gt;
      &lt;DataType&gt;String&lt;/DataType&gt;
      &lt;Constraint&gt;PICK_ONE&lt;/Constraint&gt;
      &lt;Values&gt;
        &lt;Value id=&quot;1&quot;&gt;Department of Defense&lt;/Value&gt;
        &lt;Value id=&quot;2&quot;&gt;NASA&lt;/Value&gt;
        &lt;Value id=&quot;3&quot;&gt;Coast Guard&lt;/Value&gt;
      &lt;/Values&gt;
    &lt;/Indicator&gt;
  &lt;/Indicators&gt;
&lt;/Response&gt;</pre></p>
  </div>
  <div class="span4">
    <div class="well">
      <h3>Resource Information</h3>
      <table class="table">
        <tr>
          <td>Request Type</td>
          <td><%= link_to 'Non Authenticated', v2_authentication_request_types_path %></td>
        </tr>
        <tr>
          <td>Response Formats</td>
          <td>xml</td>
        </tr>
        <tr>
          <td>HTTP Method</td>
          <td>GET</td>
        </tr>
        <tr>
          <td>Optional Parameters</td>
          <td>
            <em>page</em> - enables pagination. (example page=1)
          </td>
        </tr>
        <tr>
          <td>Response Object</td>
          <td><%= link_to 'Indicators', v2_resource_objects_library_indicator_path %></td>
        </tr>
      </table>
    </div>
  </div>
</div>
